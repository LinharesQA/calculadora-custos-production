# Configurações de Produção - Calculadora de Custos

# Banco de Dados PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=calculadora_custos
DB_USER=postgres
DB_PASS=sua_senha_postgres

# Sessões e Segurança
SESSION_SECRET=sua_chave_secreta_super_forte_aqui
NODE_ENV=production

# Redis (Opcional - se não configurado, usa sessões em memória)
# REDIS_URL=redis://localhost:6379
# ou para Redis Cloud/AWS/Azure:
# REDIS_URL=redis://username:password@host:port

# OAuth Google (se usando)
GOOGLE_CLIENT_ID=seu_google_client_id
GOOGLE_CLIENT_SECRET=seu_google_client_secret
GOOGLE_CALLBACK_URL=http://seudominio.com/auth/google/callback

# Configurações do Servidor
PORT=3001
HOST=0.0.0.0

# Logs e Debug
LOG_LEVEL=info
DEBUG=false

# CORS (domínios permitidos)
ALLOWED_ORIGINS=http://localhost:3000,https://seudominio.com
