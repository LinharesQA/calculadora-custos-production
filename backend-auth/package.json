{
    "name": "sublimacalc-backend",
    "version": "1.0.0",
    "description": "Backend para sistema de usuários da SublimaCalc",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "start:production": "NODE_ENV=production node server.js",
        "dev": "nodemon server.js",
        "setup-db": "node setup-database.js",
        "create-db": "node create-database.js",
        "db:backup": "node backup-database.js backup",
        "db:restore": "node backup-database.js restore",
        "db:reset": "npm run create-db && npm run setup-db",
        "db:status": "node -e \"require('./config/database').testConnection()\"",
        "logs": "tail -f logs/app.log || echo 'Arquivo de log não encontrado'",
        "test": "echo 'Testes em desenvolvimento'",
        "build": "echo 'Backend build completed'",
        "prestart": "npm run setup-db"
    },
    "keywords": [
        "sublimacao",
        "calculadora",
        "custos",
        "backend"
    ],
    "author": "Phillipe Linhares",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "helmet": "^7.0.0",
        "dotenv": "^16.3.1",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "passport": "^0.6.0",
        "passport-google-oauth20": "^2.0.0",
        "passport-jwt": "^4.0.1",
        "pg": "^8.11.3",
        "pg-hstore": "^2.3.4",
        "sqlite3": "^5.1.6",
        "sequelize": "^6.32.1",
        "express-rate-limit": "^6.10.0",
        "express-slow-down": "^2.0.1",
        "express-validator": "^7.0.1",
        "uuid": "^9.0.0",
        "compression": "^1.7.4"
    },
    "devDependencies": {
        "nodemon": "^3.0.1"
    }
}