{
  "name": "calculadora-custos",
  "version": "1.0.0",
  "description": "Calculadora de Custos para Sublimação - Sistema Completo",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "frontend": "node serve-frontend.cjs",
    "backend": "cd backend-auth && node server.js",
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend:setup-db": "cd backend-auth && node create-database.js",
    "clean": "rm -rf node_modules backend-auth/node_modules",
    "setup": "npm install && cd backend-auth && npm install && npm run backend:setup-db",
    "build": "npm run build:frontend",
    "build:frontend": "echo 'Frontend build completed - static files ready'",
    "build:backend": "cd backend-auth && npm install --production",
    "start:production": "cd backend-auth && npm start",
    "db:migrate": "cd backend-auth && npm run setup-db",
    "health": "curl -f http://localhost:3000/api/health || exit 1"
  },
  "keywords": [
    "calculadora",
    "custos",
    "sublimacao",
    "fullstack",
    "react",
    "express"
  ],
  "author": "VisualizaAI",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "serve": "^14.2.4"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}