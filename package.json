{
  "name": "calculadora-custos",
  "version": "1.0.0",
  "description": "Sistema completo de cálculo de custos para sublimação",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "backend": "node backend/server.js",
    "frontend": "echo 'Frontend servido via backend'",
    "build": "npm run build:frontend",
    "build:frontend": "echo 'Frontend build completed - static files ready'",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon backend/server.js",
    "dev:frontend": "echo 'Frontend em modo desenvolvimento'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "calculadora",
    "custos",
    "sublimacao",
    "nodejs",
    "express"
  ],
  "author": "Seu Nome",
  "license": "MIT"
}